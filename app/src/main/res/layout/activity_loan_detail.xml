<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:av="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_submit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头部描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainColor"
                android:orientation="vertical"
                android:paddingBottom="11dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="11dp"
                android:showDividers="middle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/iv_detail_avatar"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/icon_default_avatar"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="66dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_detail_ratesuc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_detail_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gap"/>

                <TextView
                    android:id="@+id/tv_detail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>
            <!--贷款金额，贷款期限-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/ll_detail_acount"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_detail_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_loan_acount"
                        android:drawablePadding="10dp"
                        android:text="借款金额"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_detail_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:hint="请输入借款金额"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingRight="10dp"
                        android:text=""
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gap"/>

                <RelativeLayout
                    android:id="@+id/rl_detail_period"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_detail_period_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/ic_loan_period"
                        android:drawablePadding="10dp"
                        android:text="借款期限"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_detail_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </LinearLayout>
            <!--还款，利率，放款-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#F4F9FC"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_detail_repay_mon"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_repay_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_orange_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每月还款"
                        android:textColor="@color/text_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ebebeb"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_orange_dark"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利率范围"
                        android:textColor="@color/text_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#EBEBEB"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_orange_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最快放款"
                        android:textColor="@color/text_grey"/>
                </LinearLayout>
            </LinearLayout>
            <!--申请条件-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:text="申请条件"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_detail_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:maxLines="3"
                    android:textColor="@color/text_black"
                    android:textSize="14dp"/>
            </LinearLayout>
            <!--所需材料-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:text="所需材料"
                android:textColor="@color/text_black"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gap"/>

            <com.app.qunadai.content.view.AuthView
                android:id="@+id/av_bankcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_nav_bg"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                av:mDesc="@string/increase500_1000"
                av:mLogo="@mipmap/icon_bank_auth"
                av:mName="银行卡验证"
                av:mStatus="no"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap"/>

            <com.app.qunadai.content.view.AuthView
                android:id="@+id/av_realinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ripple_nav_bg"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                av:mDesc="@string/increase500_1000"
                av:mLogo="@mipmap/icon_real_info"
                av:mName="真实信息填写"
                av:mStatus="no"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FFB200"
        android:gravity="center"
        android:text="立即申请"
        android:textColor="@color/white"
        android:textSize="14dp"/>

</RelativeLayout>