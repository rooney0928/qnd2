<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/nav_line"/>

        <RadioGroup
            android:id="@+id/rg_nav_group"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_nav_home"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ripple_nav_bg"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_home"
                android:gravity="center_horizontal"
                android:text="去哪贷"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="12sp"/>

            <!--
                        <RadioButton
                            android:id="@+id/rb_nav_limit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_nav_bg"
                            android:button="@null"
                            android:drawablePadding="-5dp"
                            android:drawableTop="@drawable/selector_tab_limit"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="额度"
                            android:textColor="@drawable/selector_tab_text"
                            android:textSize="12sp" />
            -->
            <RadioButton
                android:id="@+id/rb_nav_bbs"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ripple_nav_bg"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_bbs"
                android:gravity="center_horizontal"
                android:text="社区"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_nav_me"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ripple_nav_bg"
                android:button="@null"
                android:drawableTop="@drawable/selector_tab_me"
                android:gravity="center_horizontal"
                android:text="我"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="12sp"/>

        </RadioGroup>
    </LinearLayout>
</RelativeLayout>