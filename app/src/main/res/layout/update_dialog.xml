<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/update_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="1.feafewfew\n2.43r43t34t34"
        android:textColor="@color/black5" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple_nav_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="关闭"
            android:textColor="@color/black5" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gap" />

        <TextView
            android:id="@+id/tv_update_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple_nav_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="更新"
            android:textColor="@color/black5" />
    </LinearLayout>
</LinearLayout>