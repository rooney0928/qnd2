<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="35dp"
                android:paddingTop="15dp"
                android:src="@mipmap/cpl_bg2" />

            <!--省市区-->
            <LinearLayout
                android:id="@+id/ll_cpl_location"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省市区"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cpl_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/cpl_icon_more" />
                </RelativeLayout>


            </LinearLayout>

            <View style="@style/line_0dp" />

            <!--居住地址-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="居住地址"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_cpl_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:background="@null"
                    android:hint="请输入详细地址"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/line_0dp" />

            <!--是否缴纳社保2-->
            <LinearLayout
                android:id="@+id/ll_cpl_social"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否缴纳社保"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cpl_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/cpl_icon_more" />
                </RelativeLayout>


            </LinearLayout>

            <View style="@style/line_0dp" />

            <!--紧急联系人3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_cpl_warning_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入紧急联系人"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />

            </LinearLayout>

            <View style="@style/line_0dp" />

            <!--紧急联系人关系2-->
            <LinearLayout
                android:id="@+id/ll_cpl_warning_relative"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人关系"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cpl_warning_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/cpl_icon_more" />
                </RelativeLayout>


            </LinearLayout>

            <View style="@style/line_0dp" />

            <!--紧急联系人电话3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人电话"
                    android:textColor="@color/cpl_key"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_cpl_warning_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入紧急联系人联系方式"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/cpl_value"
                    android:textColorHint="@color/cpl_hint"
                    android:textSize="16sp" />

            </LinearLayout>

            <View style="@style/line_0dp" />

            <TextView
                android:id="@+id/tv_feedback_submit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/bg_loan"
                android:gravity="center"
                android:text="立即借款"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>