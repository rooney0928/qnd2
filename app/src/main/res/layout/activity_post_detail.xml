                            android:src="@mipmap/ic_wechat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="微信"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_half_btn"
