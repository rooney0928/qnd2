<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:av="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_auth_loan"
        android:background="@color/main_bg"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_auth" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预估额度"
                            android:textColor="@color/white" />

                        <me.bakumon.numberanimtextview.NumberAnimTextView
                            android:id="@+id/natv_limit_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="4dp"
                            android:text="1000"
                            android:textColor="@color/v5_golden"
                            android:textSize="42sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完善信息获取更高额度"
                            android:textColor="#80ffffff" />
                    </LinearLayout>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f6f6f6" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_bankcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_bank_auth"
                    av:mName="银行卡验证"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_ebank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_ebank"
                    av:mName="网银"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_carrier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_carrier"
                    av:mName="运营商"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_alipay"
                    av:mName="支付宝"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_email"
                    av:mName="邮箱"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_fund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_fund"
                    av:mName="公积金"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_taobao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_taobao"
                    av:mName="淘宝"
                    av:mStatus="no" />

                <View style="@style/line_15dp" />

                <com.app.qunadai.content.view.AuthView
                    android:id="@+id/av_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_nav_bg"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    av:mLogo="@mipmap/icon_zhengxin"
                    av:mName="征信"
                    av:mStatus="no" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_loan_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/icon_question"
                android:visibility="gone" />


        </RelativeLayout>


    </ScrollView>

    <TextView
        android:id="@+id/tv_auth_loan"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:background="@drawable/bg_loan"
        android:gravity="center"
        android:text="立即借款"
        android:textColor="@color/white" />
</RelativeLayout>
