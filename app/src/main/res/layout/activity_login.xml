<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <Button
            android:id="@+id/bt_style_pwd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/selector_left_half_round_circle_green_white"
            android:paddingBottom="3dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="3dp"
            android:text="密码登录"
            android:textColor="@drawable/selector_green_white"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/bt_sms_style"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/selector_right_half_round_circle_green_white"
            android:paddingBottom="3dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="3dp"
            android:text="验证码登录"
            android:textColor="@drawable/selector_green_white"
            android:textSize="15dp"/>


    </LinearLayout>

    <!--用户名-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="42dp"
            android:paddingRight="42dp"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_clear"/>

    </RelativeLayout>
    <!--密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_pwd"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="42dp"
            android:paddingRight="42dp"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_clear"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/selector_pwd_hidden"/>
        </LinearLayout>

    </RelativeLayout>
    <!--验证码-->
    <RelativeLayout
        android:id="@+id/rl_login_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_sms"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="42dp"
            android:paddingRight="42dp"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/bt_get_sms"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_sms"
            android:enabled="true"
            android:text="获取验证码"
            android:textColor="@color/mainColor"
            android:textSize="12sp"/>

    </RelativeLayout>
    <!--操作栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:text="快速注册"
            android:textColor="@color/mainColor"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="忘记密码"
            android:textColor="@color/mainColor"
            android:textSize="14sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_submit_style"
        android:enabled="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</LinearLayout>