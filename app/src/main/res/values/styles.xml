<resources>

    <!-- Base application theme. -->

    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#31B7C1</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="tabTextAppearance">@style/customTabTextAppearance</item>
        <item name="tabSelectedTextColor">#31B7C1</item>
    </style>

    <style name="customTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
